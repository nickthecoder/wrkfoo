{
    include: "files.json",
    options:[
        {code:"", label:"Open", action:"command('gnome-open', row.file)"} ,
        {code:"a", label:"Git Add", action:"command('git', 'add', rows.collect {it.path} ).dir(task.directory.value).run(); tool", multi:true},
        {code:"d", aliases:"df", label:"Git Diff", groovy:"command('git', 'diff', row.path).dir(task.directory.value)"},
        {code:"c", label:"Git Commit", groovy:"gui('git', 'commit').dir(task.directory.value).once()", row: false},
        {code:"ca", label:"Git Commit All", groovy:"gui('git', 'commit', '-a').dir(task.directory.value).once()", row: false},
        {code:"po", label:"Git Push Origin", groovy:"gui('git', 'push', '-u', 'origin').dir(task.directory.value).once()", row: false},
        {code:"i", label:"Git Ignore", groovy:"command('echo',row.path).stdout(new FileSink(new File(task.directory.value,'.gitignore'),true))"}
    ]
}
